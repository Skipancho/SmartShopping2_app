<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.registration.product.ProductRegistrationActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="16dp"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/iv_add_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/gl_top"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            android:background="@color/gray_828282"
            android:src="@drawable/ic_add_photo_24"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_images"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/gl_top"
            app:layout_constraintStart_toEndOf="@id/iv_add_image"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            android:layout_marginHorizontal="10dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_add_image"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            android:layout_marginTop="10dp"
            android:hint="상품명"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_product_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_product_name"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            android:layout_marginTop="10dp"
            android:hint="상품설명"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_product_n_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_product_description"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:hint="가격"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_product_s_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_product_n_price"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            android:layout_marginTop="10dp"
            android:hint="최종판매가격"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_product_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            app:layout_constraintTop_toBottomOf="@id/et_product_s_price"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_read_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_product_category"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            android:text="바코드 읽기"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_product_barcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/btn_read_barcode"
            app:layout_constraintBottom_toBottomOf="@id/btn_read_barcode"
            app:layout_constraintStart_toEndOf="@id/btn_read_barcode"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            android:gravity="center"
            android:hint="바코드"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_registration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="등록하기"
            app:layout_constraintStart_toEndOf="@id/gl_start"
            app:layout_constraintEnd_toStartOf="@id/gl_end"
            app:layout_constraintBottom_toTopOf="@id/gl_bottom"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>