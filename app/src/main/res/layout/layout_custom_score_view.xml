<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_star"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_star_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        tools:src="@drawable/ic_star_50" />

    <ImageView
        android:id="@+id/iv_star_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        tools:src="@drawable/ic_star_50" />

    <ImageView
        android:id="@+id/iv_star_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        tools:src="@drawable/ic_star_50" />

    <ImageView
        android:id="@+id/iv_star_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        tools:src="@drawable/ic_empty_star_50" />

    <ImageView
        android:id="@+id/iv_star_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        tools:src="@drawable/ic_empty_star_50" />
</LinearLayout>